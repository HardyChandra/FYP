@model FYP.Models.VotingModel.Create

@{
	ViewData["Title"] = "Create";
}

<div class="container">
	<div class="mt-3 ml-3">
		<a href="~/Admin/Homepage"><span id="icon"><i class="fa-solid fa-arrow-left-long"></i></span></a>
		<h2 class="text-center">Voting Menu</h2>
	</div>
	<div class="row justify-content-center my-5">
		<div class="col-md-4">
			<form asp-action="CreateVoting">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="Title" class="control-label"></label>
					<input asp-for="Title" class="form-control" />
					<span asp-validation-for="Title" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Description" class="control-label"></label>
					<textarea asp-for="Description" class="form-control"></textarea>
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="TotalVoter" class="control-label"></label>
					<input asp-for="TotalVoter" type="number" min="1" max="20" class="form-control" />
					<span asp-validation-for="TotalVoter" class="text-danger"></span>
					<p class="text-muted">Max. 20 voters</p>
				</div>
				<div class="form-group">
					<label asp-for="Duration" class="control-label"></label>
					<input asp-for="Duration" type="number" min="1" max="31" class="form-control" />
					<span asp-validation-for="Duration" class="text-danger"></span>
				</div>

				<div class="form-group text-center">
					<input type="submit" value="Create" class="btn btn-primary w-25" />
				</div>
			</form>
		</div>
	</div>
</div>



