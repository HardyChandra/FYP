@model FYP.Models.VotingModel.VotingViewModel

@{
	ViewData["Title"] = "VotingPage";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-3 ml-3">
	<a href="~/Home/Index"><span id="icon"><i class="fa-solid fa-arrow-left-long"></i></span></a>
</div>
<div class="container">
	<h2 class="text-center my-5">@Html.DisplayFor(model => model.votingModel.voting_title)</h2>
	<form method="post" asp-action="Vote" asp-route-VoteID="@Model.votingModel.voting_id">
		<div class="row">
			@foreach (var item in Model.candidateModel)
			{
				<div class="col-12 col-md-4 d-flex align-items-center justify-content-center">
					<div class="card" style="width: 18rem;">
						<div class="card-body text-center">
							<span id="icon2">
								<i class="fa-solid fa-user"></i>
							</span>
							<h5 class="card-title mt-3">@item.CandidateName</h5>
						</div>
						<ul class="list-group list-group-flush">
							<li class="list-group-item"><h5 class="d-block text-center">Vision</h5>@item.CandidateVision</li>
							<li class="list-group-item">
								<h5 class="d-block text-center">Mission</h5>
								@item.CandidateMission
							</li>
							<li class="list-group-item text-center">
								<h6 class="my-3">0 / @Model.votingModel.voting_total_voter</h6>
								<div class="form-check text-center mt-3">
									<input class="form-check-input" type="radio" name="selectedCandidate" value="@item.CandidateID">
								</div>
							</li>
						</ul>
						<input type="hidden" asp-for="@item.VotingID" />
					</div>
				</div>
			}

		</div>
		<div class="text-center mt-5">
			<button type="submit" class="btn btn-primary">Vote</button>
		</div>
	</form>
</div>