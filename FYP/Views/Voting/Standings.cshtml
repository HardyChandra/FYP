@model FYP.Models.VotingModel.VotingViewModel

@{
	ViewData["Title"] = "Standings";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="mt-3 ml-3">
	<a href="~/Voting/Dashboard"><span id="icon"><i class="fa-solid fa-arrow-left-long"></i></span></a>
</div>
<div class="container">
	<h2 class="text-center my-5">@Html.DisplayFor(model => model.votingModel.voting_title)</h2>
	<div class="row">
		@foreach (var item in Model.candidateModel)
		{
			<div class="col-12 col-md-4 d-flex align-items-center justify-content-center">
				<div class="card" style="width: 18rem;">
					<div class="card-body text-center">
						<span id="icon2">
							<i class="fa-solid fa-user"></i>
						</span>
						<h5 class="card-title mt-3">@item.CandidateName</h5>
					</div>
					<ul class="list-group list-group-flush">
						<li class="list-group-item"><h5 class="d-block text-center">Vision</h5>@item.CandidateVision</li>
						<li class="list-group-item">
							<h5 class="d-block text-center">Mission</h5>
							@item.CandidateMission
						</li>
						<li class="list-group-item text-center">
							<h6 class="my-3">0 / @Model.votingModel.voting_total_voter</h6>
						</li>
					</ul>
					<input type="hidden" asp-for="@item.VotingID" />
				</div>
			</div>
		}
	</div>
	<div class="row my-5">
		<div class="col-12 col-md-6 text-center">
			<h4>Total Vote</h4>
			<h6>0 / @Model.votingModel.voting_total_voter</h6>
		</div>
		<div class="col-12 col-md-6 text-center">
			<h4>End Date</h4>
			<h6>@Model.votingModel.end_date.ToShortDateString()</h6>
		</div>
	</div>
</div>

