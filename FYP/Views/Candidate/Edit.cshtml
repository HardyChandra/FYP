@model FYP.DatabaseModel.Candidate

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
} 

<div class="container">
	<div class="mt-3 ml-3">
		<a href="~/Voting/Dashboard"><span id="icon"><i class="fa-solid fa-arrow-left-long"></i></span></a>
		<h2 class="text-center">Candidate</h2>
	</div>
	<div class="row">
		<div class="col-md-12 my-5">
			<form asp-action="Edit">
				<input type="hidden" asp-for="candidate_id" />
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group mb-3">
					<label asp-for="candidate_name" class="control-label"></label>
					<input asp-for="candidate_name" class="form-control" autocomplete="off" />
					<span asp-validation-for="candidate_name" class="text-danger"></span>
				</div>
				<div class="form-group mb-3">
					<label asp-for="candidate_vision" class="control-label"></label>
					<textarea asp-for="candidate_vision" class="form-control" autocomplete="off"></textarea>
					<span asp-validation-for="candidate_vision" class="text-danger"></span>
				</div>
				<div class="form-group mb-3">
					<label asp-for="candidate_mission" class="control-label"></label>
					<textarea asp-for="candidate_mission" class="form-control" autocomplete="off"></textarea>
					<span asp-validation-for="candidate_mission" class="text-danger"></span>
				</div>
				<div class="form-group text-center mt-5">
					<input type="submit" value="Save" class="btn btn-primary w-25" />
				</div>
			</form>
		</div>
	</div>
</div>