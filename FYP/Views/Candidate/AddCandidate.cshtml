@model FYP.Models.CandidateModel.InsertCandidate

@{
	ViewData["Title"] = "Add_Candidate";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
	<div class="mt-3 ml-3">
		<a href="~/Voting/Dashboard"><span id="icon"><i class="fa-solid fa-arrow-left-long"></i></span></a>
		<h2 class="text-center">Candidate</h2>
	</div>
	<div class="row">
		<div class="col-md-12 my-5">
			<form asp-action="AddCandidate">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group mb-3">
					<label asp-for="CandidateName" class="control-label"></label>
					<input asp-for="CandidateName" class="form-control" autocomplete="off" />
					<span asp-validation-for="CandidateName" class="text-danger"></span>
				</div>
				<div class="form-group mb-3">
					<label asp-for="CandidateVision" class="control-label"></label>
					<textarea asp-for="CandidateVision" class="form-control" autocomplete="off"></textarea>
					<span asp-validation-for="CandidateVision" class="text-danger"></span>
				</div>
				<div class="form-group mb-3">
					<label asp-for="CandidateMission" class="control-label"></label>
					<textarea asp-for="CandidateMission" class="form-control" autocomplete="off"></textarea>
					<span asp-validation-for="CandidateMission" class="text-danger"></span>
				</div>
				<div class="form-group text-center mt-5">
					<input type="submit" value="Add" class="btn btn-primary w-25" />
				</div>
			</form>
		</div>
	</div>
</div>


