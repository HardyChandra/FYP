@model FYP.DatabaseModel.Candidate

@{
	ViewData["Title"] = "Delete";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
	<div class="mt-3 ml-3">
		<a href="~/Voting/Dashboard"><span id="icon"><i class="fa-solid fa-arrow-left-long"></i></span></a>
		<h2 class="text-center">Candidate</h2>
	</div>
	<div class="row">
		<div class="col-12 mb-3">
			<label class="control-label">Name</label>
			<input asp-for="candidate_name" class="form-control" readonly />
			<span asp-validation-for="candidate_name" class="text-danger"></span>
		</div>
		<div class="col-12 mb-3">
			<label class="control-label">Vision</label>
			<textarea asp-for="candidate_vision" class="form-control" readonly></textarea>
		</div>
		<div class="col-12 mb-3">
			<label class="control-label">Mission</label>
			<textarea asp-for="candidate_mission" class="form-control" readonly></textarea>
		</div>
	</div>

	<form asp-action="Delete" class="text-right">
		<input type="hidden" asp-for="candidate_id" />
		<input type="submit" value="Delete" class="btn btn-primary w-25" />
	</form>
</div>
