@model FYP.Models.AdminModel.ChangePassword

@{
    ViewData["Title"] = "Password";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="mt-3 ml-3">
	<a href="~/Admin/Profile"><span id="icon"><i class="fa-solid fa-arrow-left-long"></i></span></a>
</div>
<div id="main-wrapper" class="container d-flex flex-column justify-content-center align-items-center">
	<form asp-action="Password" id="defaultForm">
		<h3 class="my-3 text-center">Password</h3>
		 @Html.HiddenFor(model => model.AdminID)
		 @if (ViewBag.Message != null)
			{
				<div class="alert alert-danger alert-dismissible fade show mx-3" role="alert">
					@ViewBag.Message
					<button type="button" class="close" data-dismiss="alert" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
			}
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="mx-3">
			<div class="input-group flex-nowrap p-2">
				<span id="icon">
					<i class="fa-solid fa-lock mr-3"></i>
				</span>
				<input asp-for="OldPassword" class="form-control" id="txtPassword" placeholder="Old Password" autocomplete="off" />
			</div>
			<span asp-validation-for="OldPassword" class="text-danger ml-5"></span>
		</div>
		<div class="mx-3">
			<div class="input-group flex-nowrap p-2">
				<span id="icon">
					<i class="fa-solid fa-lock mr-3"></i>
				</span>
				<input asp-for="NewPassword" class="form-control" id="txtPassword" placeholder="New Password" autocomplete="off" />
			</div>
			<span asp-validation-for="NewPassword" class="text-danger ml-5"></span>
		</div>
		<div class="mx-3">
			<div class="input-group flex-nowrap p-2">
				<span id="icon">
					<i class="fa-solid fa-lock mr-3"></i>
				</span>
				<input asp-for="ConfirmNewPassword" class="form-control" id="txtConfirmationPassword" placeholder="Confirm New Password" autocomplete="off" />
			</div>
			<span asp-validation-for="ConfirmNewPassword" class="text-danger ml-5"></span>
		</div>
		<div class="form-group text-center">
			<input type="submit" value="Save" class="btn btn-primary w-50 my-3"/>
		</div>
	</form>
</div>




